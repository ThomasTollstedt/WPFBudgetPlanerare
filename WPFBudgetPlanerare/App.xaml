<Application x:Class="WPFBudgetPlanerare.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WPFBudgetPlanerare">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Colors must be loaded first -->
                <ResourceDictionary Source="Resources/Theme/Colors.xaml"/>
                
                <!-- Then styles that depend on colors -->
                <ResourceDictionary Source="Resources/Styles/TextBlocks.xaml"/>
                <ResourceDictionary Source="Resources/Styles/Cards.xaml"/>
                <ResourceDictionary Source="Resources/Styles/Buttons.xaml"/>
                <ResourceDictionary Source="Resources/Styles/Controls.xaml"/>
                
                <!-- Finally templates that use styles -->
                <ResourceDictionary Source="Resources/Templates/TransactionTemplate.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
