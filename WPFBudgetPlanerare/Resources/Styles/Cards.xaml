<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Drop Shadow Effect for Cards -->
    <DropShadowEffect x:Key="CardShadow" 
                      Color="#000000" 
                      BlurRadius="10" 
                      ShadowDepth="3" 
                      Opacity="0.08"/>

    <DropShadowEffect x:Key="HeaderShadow" 
                      Color="#000000" 
                      BlurRadius="12" 
                      ShadowDepth="2" 
                      Opacity="0.15"/>

    <!-- Transaction Card Border -->
    <Style x:Key="TransactionCard" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource App.Surface}"/>
        <Setter Property="BorderBrush" Value="{StaticResource App.Border}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="18"/>
        <Setter Property="Margin" Value="5,5,5,10"/>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="Effect" Value="{StaticResource CardShadow}"/>
    </Style>

    <!-- User Header Card -->
    <Style x:Key="UserHeaderCard" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource App.Accent}"/>
        <Setter Property="Padding" Value="20,15"/>
        <Setter Property="Margin" Value="15,15,15,10"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Effect" Value="{StaticResource HeaderShadow}"/>
    </Style>

    <!-- Info Badge -->
    <Style x:Key="InfoBadge" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource App.Badge}"/>
        <Setter Property="CornerRadius" Value="15"/>
        <Setter Property="Padding" Value="12,5"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- Date Badge -->
    <Style x:Key="DateBadge" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource App.Background}"/>
        <Setter Property="CornerRadius" Value="5"/>
        <Setter Property="Padding" Value="10,5"/>
        <Setter Property="BorderBrush" Value="{StaticResource App.Border}"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>

    <!-- Amount Badge -->
    <Style x:Key="AmountBadge" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource App.Accent}"/>
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="Padding" Value="14,7"/>
        <Setter Property="Margin" Value="12,0,0,8"/>
    </Style>

    <!-- Form Section Card -->
    <Style x:Key="FormCard" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource App.Surface}"/>
        <Setter Property="BorderBrush" Value="{StaticResource App.Border}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="25"/>
        <Setter Property="Margin" Value="15"/>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="Effect" Value="{StaticResource CardShadow}"/>
    </Style>

    <!-- Summary Card (for Forecast view) -->
    <Style x:Key="SummaryCard" TargetType="Border">
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="15"/>
        <Setter Property="Effect" Value="{StaticResource CardShadow}"/>
    </Style>

</ResourceDictionary>