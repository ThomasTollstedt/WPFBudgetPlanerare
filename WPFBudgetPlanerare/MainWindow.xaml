<Window x:Class="WPFBudgetPlanerare.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        
        xmlns:local="clr-namespace:WPFBudgetPlanerare"
        xmlns:vm="clr-namespace:WPFBudgetPlanerare.VM"
        
        
        mc:Ignorable="d"
        Title="BudgetPlanerare" Height="500" Width="900">

    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:DashboardViewModel}">
            <local:DashboardView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:ForecastViewModel}">
            <local:ForecastView />
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>

        <ContentControl Grid.Column="0" Content="{Binding CurrentViewModel}"/>

        <Border Grid.Column="1" Background="#f8f8f8" BorderBrush="#ddd" BorderThickness="1,0,0,0">
            <StackPanel Margin="10">
                <TextBlock Text="MENY" FontWeight="Bold" FontSize="16" Margin="0,0,0,20" HorizontalAlignment="Center"/>

                <Button Content="Översikt" 
                        Command="{Binding NavigateToDashboardCommand}"
                        Padding="10" Margin="0,5"/>

                <Button Content="Månadsprognos" 
                        Command="{Binding NavigateToForecastCommand}"
                        Padding="10" Margin="0,5"/>

                <Button Content="Lägg till Transaktion"
                        Padding="10" Margin="0,5"
                        Background="#e0e0e0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>