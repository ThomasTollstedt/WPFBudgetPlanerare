<UserControl x:Class="WPFBudgetPlanerare.Views.AddTransactionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFBudgetPlanerare"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="600">
    <Grid Background="{StaticResource App.Background}">
        <Border Style="{StaticResource FormCard}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Title -->
                <TextBlock Grid.Row="0" Grid.ColumnSpan="2" 
                           Text="Lägg till ny transaktion" 
                           Style="{StaticResource SectionHeader}"/>

                <!-- Type -->
                <TextBlock Grid.Row="1" Grid.Column="0" 
                           Text="Typ:" 
                           Style="{StaticResource FormLabel}"/>
                <StackPanel Grid.Row="1" Grid.Column="1" 
                            Orientation="Horizontal" 
                            Margin="0,0,0,15">
                    <RadioButton Content="Utgift" 
                                 IsChecked="{Binding IsExpense}" 
                                 GroupName="TransType" 
                                 Style="{StaticResource FormRadioButton}"
                                 Margin="0,0,20,0"/>
                    <RadioButton Content="Inkomst" 
                                 GroupName="TransType"
                                 Style="{StaticResource FormRadioButton}"/>
                </StackPanel>

                <!-- Description -->
                <TextBlock Grid.Row="2" Grid.Column="0" 
                           Text="Beskrivning:" 
                           Style="{StaticResource FormLabel}"/>
                <TextBox Grid.Row="2" Grid.Column="1" 
                         Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" 
                         Style="{StaticResource FormTextBox}"/>

                <!-- Amount -->
                <TextBlock Grid.Row="3" Grid.Column="0" 
                           Text="Belopp:" 
                           Style="{StaticResource FormLabel}"/>
                <TextBox Grid.Row="3" Grid.Column="1" 
                         Text="{Binding Amount, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}" 
                         Style="{StaticResource FormTextBox}"/>

                <!-- Category -->
                <TextBlock Grid.Row="4" Grid.Column="0" 
                           Text="Kategori:" 
                           Style="{StaticResource FormLabel}"/>
                <ComboBox Grid.Row="4" Grid.Column="1" 
                          ItemsSource="{Binding AvailableCategories}" 
                          SelectedItem="{Binding SelectedCategory}"
                          Style="{StaticResource FormComboBox}"/>

                <!-- Start Date -->
                <TextBlock Grid.Row="5" Grid.Column="0" 
                           Text="Datum:" 
                           Style="{StaticResource FormLabel}"/>
                <DatePicker Grid.Row="5" Grid.Column="1" 
                            SelectedDate="{Binding Date}"
                            Style="{StaticResource FormDatePicker}"/>

                <!-- End Date -->
                <TextBlock Grid.Row="6" Grid.Column="0" 
                           Text="Slutdatum:" 
                           Style="{StaticResource FormLabel}"/>
                <DatePicker Grid.Row="6" Grid.Column="1" 
                            SelectedDate="{Binding EndDate}"
                            Style="{StaticResource FormDatePicker}"/>

                <!-- Frequency -->
                <TextBlock Grid.Row="7" Grid.Column="0" 
                           Text="Frekvens:" 
                           Style="{StaticResource FormLabel}"/>
                <ComboBox Grid.Row="7" Grid.Column="1" 
                          ItemsSource="{Binding Frequencies}"
                          SelectedItem="{Binding SelectedFrequency}"
                          Style="{StaticResource FormComboBox}"
                          Margin="0,0,0,20"/>

                <!-- Save Button -->
                <Button Grid.Row="8" Grid.Column="1" 
                        Content="Spara Transaktion" 
                        Command="{Binding SaveCommand}"
                        Style="{StaticResource PrimaryButton}"
                        HorizontalAlignment="Left"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
